<p id="notice"><%= notice %></p>

<h1>Listing Forms</h1>

<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Company</th>
      <th>Tax</th>
      <th>Salesperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.date %></td>
        <td><%= form.company %></td>
        <td><%= form.tax %></td>
        <td><%= form.salesperson %></td>
        <td><%= link_to 'Show', form, class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_form_path(form), class:'btn  btn-warning' %></td>
        <td><%= link_to 'Destroy', form, method: :delete, class:'btn  btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>  </div></div>

<br>

